{
  "rules": {
    ".read": false,
    ".write": false,
    "users": {
      ".read": true,
      "$users": {
        ".write": "(auth.uid == $users || root.child('adminisrators').hasChild(auth.uid))",
        "basicInfo": {
          ".read": "(auth != null)",
          ".write": "(auth.uid == $users || root.child('moderators').hasChild(auth.uid) || root.child('adminisrators').hasChild(auth.uid))"
        },
        "advancedInfo": {
          ".read": "(auth.uid == $users || root.child('moderators').hasChild(auth.uid) || root.child('adminisrators').hasChild(auth.uid))",
          ".write": "(auth.uid == $users || root.child('moderators').hasChild(auth.uid) || root.child('adminisrators').hasChild(auth.uid))"
        }
      }
    },
    "pages": {
      ".read": true,
      ".write": true
    },
    "articles": {
      ".read": true,
      "$article": {
        ".read": true,
        ".write": "(!root.child('articles').hasChild(newData.child('slug').val()) && auth != null && (root.child('editors').hasChild(auth.uid) || root.child('moderators').hasChild(auth.uid) || root.child('adminisrators').hasChild(auth.uid)))"
      }
    },
    "categories": {
      ".read": true,
      ".write": "(auth != null && (root.child('editors').hasChild(auth.uid) || root.child('moderators').hasChild(auth.uid) || root.child('adminisrators').hasChild(auth.uid)))"
    },
    "tags": {
      ".read": true,
      ".write": "(auth != null && (root.child('editors').hasChild(auth.uid) || root.child('moderators').hasChild(auth.uid) || root.child('adminisrators').hasChild(auth.uid)))"
    },
    "menu": {
      ".read": true
    },
    "adminisrators": {
      ".read": true,
      "$users": {
        ".write": "(auth.uid == $users || root.child('adminisrators').hasChild(auth.uid))"
      }
    },
    "moderators": {
      ".read": true,
      "$users": {
        ".write": "(auth.uid == $users || root.child('adminisrators').hasChild(auth.uid))"
      }
    },
    "editors": {
      ".read": true,
      "$users": {
        ".read": true,
        ".write": "(auth.uid == $users || root.child('adminisrators').hasChild(auth.uid) || root.child('moderators').hasChild(auth.uid))"
      }
    },
    "viewers": {
      ".read": true,
      "$users": {
        ".write": "(auth.uid != null)"
      }
    },
  }
}